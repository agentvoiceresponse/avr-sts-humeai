{
  "name": "avr-sts-humeai",
  "version": "1.0.0",
  "author": "Agent Voice Response <info@agentvoiceresponse.com>",
  "description": "HumeAI Speech-to-Speech service for Agent Voice Response",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "nodemon --watch src --exec ts-node src/index.ts --inspect",
    "dc:build": "docker build --platform=linux/amd64 -t agentvoiceresponse/avr-sts-humeai:latest -t agentvoiceresponse/avr-sts-humeai:${npm_package_version} .",
    "dc:push": "docker push agentvoiceresponse/avr-sts-humeai:latest && docker push agentvoiceresponse/avr-sts-humeai:${npm_package_version}"
  },
  "dependencies": {
    "avr-resampler": "^1.0.4",
    "dotenv": "^17.2.3",
    "hume": "^0.15.6",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "contributors": [
    {
      "name": "Mirko Bertone",
      "email": "",
      "url": ""
    }
  ]
}
